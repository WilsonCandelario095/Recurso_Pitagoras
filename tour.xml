	<action name="actualizar_pantalla"><![CDATA[
		trace('actualizar_pantalla - antes: ' + get(codigo_secreto));
		set(hotspot[texto_contador].html, calc('Código Actual: [b]' + get(codigo_secreto) + '[/b]'));
		trace('actualizar_pantalla - después: ' + get(codigo_secreto));
	]]></action>
	<action name="incrementar_contador"><![CDATA[
		set(codigo_secreto, calc(get(codigo_secreto) + 1));
		call(actualizar_pantalla);
		trace('codigo_secreto incrementado: ' + get(codigo_secreto));
		if(get(codigo_secreto) == 5, trace('¡CÓDIGO SECRETO ENCONTRADO!'););
	]]></action>

	<action name="reducir_contador"><![CDATA[
		if(get(codigo_secreto) > 0,
			set(codigo_secreto, calc(get(codigo_secreto) - 1));
			call(actualizar_pantalla);
		);
	]]></action>

